<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	
	<resultMap id="resultMapBoardVo" type="BoardVo">
		<result column="no" property="no" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="hit" property="hit" />
		<result column="reg_date" property="regDate" />
		<result column="user_no" property="userNo" />
	</resultMap>
	
	<insert id="write" parameterType="BoardVo">
		<![CDATA[
			insert into board
			values(seq_board_no.nextval,#{title},#{content}, 0, sysdate, #{userNo})
		]]>
	</insert>
	
	<delete id="listDelete" parameterType="int">
		<![CDATA[
			delete from borad
			where no = #{no}
		]]>
		
	</delete>
	
	<select id="getList" resultMap="resultMapBoardVo" >
		<![CDATA[
			select  b.no no,
					b.user_no userNo,
					b.title title,
					b.hit hit,
					b.reg_date regDate,
					u.name name
			from board b, users u
			where b.user_no = u.no
			order by b.no desc
			]]>
	</select>
	
	<select id="read" parameterType="int" resultMap="resultMapBoardVo" >
		<![CDATA[
			select  b.no no,
					b.user_no userNo,
					b.title title,
					b.hit hit,
					b.reg_date regDate,
					u.name name,
					b.content content
			from board b, users u
			where b.user_no = u.no
			order by b.no desc
			and b.no = #{no}
			]]>
	</select>
	
	
	
</mapper>