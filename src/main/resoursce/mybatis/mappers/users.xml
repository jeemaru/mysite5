<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<resultMap id="resultMapUserVo" type="UserVo">
		<result column="no" property="no" />
		<result column="id" property="id" />
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="gender" property="gender" />
	</resultMap>
	
	

	<insert id="join" parameterType="UserVo">
		<![CDATA[
			insert into users
			values(seq_users_no.nextval, #{id}, #{password}, #{name}, #{gender})
		]]>
	</insert>
	

	
	<select id="getUser" parameterType="int" resultMap="resultMapUserVo">
		<![CDATA[
			select  no,
					id,
					password,
					name,
					gender
			from users
			where no = #{no}
		]]>
	</select>
	
	
	<select id="login" parameterType="UserVo" resultMap="resultMapUserVo">
		<![CDATA[
			select  no,
					name
			from users
			where id = #{id}
			and password = #{password}
		]]>
	</select>
	
	<update id="modify" parameterType="UserVo">
		<![CDATA[
			update users
			set password = #{password},
				name = #{name},
				gender =#{gender}
			where no = #{no}
		]]>
	</update>
	
	
</mapper>